<renderpath>
    <!-- Добавлено -->
    <rendertarget name="visiblemask" sizedivisor="1 1" format="a" />
    <rendertarget name="fullmask" sizedivisor="1 1" format="a" />
    <command type="clear" color="0 0 0 0" output="visiblemask" />
    <command type="clear" color="0 0 0 0" output="fullmask" />

    <!-- Исходное содержимое -->
    <command type="clear" color="fog" depth="1.0" stencil="0" />
    <command type="scenepass" pass="base" vertexlights="true" metadata="base" />
    <command type="forwardlights" pass="light" />
    <command type="scenepass" pass="postopaque" />
    <command type="scenepass" pass="refract">
        <texture unit="environment" name="viewport" />
    </command>
    <command type="scenepass" pass="alpha" vertexlights="true" sort="backtofront" metadata="alpha" />
    <command type="scenepass" pass="postalpha" sort="backtofront" />
    
    <!-- Добавлено -->
    <command type="scenepass" pass="visiblemask" output="visiblemask" />
    <command type="scenepass" pass="fullmask" output="fullmask" />
    <command type="quad"  tag="WallHack" vs="WallHack" ps="WallHack" output="viewport">
        <texture unit="diffuse" name="viewport" />
        <texture unit="normal" name="fullmask" />
        <texture unit="specular" name="visiblemask" />
    </command>
</renderpath>
